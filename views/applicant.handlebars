{{!-- Added padding to the body to prevent the nav bar from overlapping with body content --}}
<link href="css/login_style.css" rel="stylesheet">

<link href="css/awesome-bootstrap-checkbox.css" rel="stylesheet">

<div class = "main-container">

<fieldset>

<form class="col-md-4 col-md-offset-4 create-update-form" action="/createSkills" method="POST">
    <h2>The Basics</h2>
    <div class="form-group">
        <label for="first_name" class="control-label">First Name</label>
        <input type="text" class="form-control" id="first_name" name="first_name" placeholder="First Name">
    </div> 
    <div class="form-group">
        <label for="last_name" class="control-label">Last Name</label>
        <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Last Name">
    </div>  

        <div class="form-group">
        <label for="email" class="control-label">Email</label>
        <input type="text" class="form-control" id="email" name="email" placeholder="Email">
    </div>  
    <div class="form-group"> <!-- Street 1 -->
        <label for="address" class="control-label">Address</label>
        <input type="text" class="form-control" id="address" name="address" placeholder="Street address, P.O. box, company name, c/o">
    </div>                  
    <div class="form-group">
        <label for="phone_number" class="control-label">Phone Number</label>
        <input type="text" class="form-control" id="phone_number" name="phone_number" placeholder="Phone Number">
    </div> 

    <div class="form-group">
        <label for="linkedin" class="control-label">LinkedIn</label>
        <input type="text" class="form-control" id="linkedin" name="linkedin" placeholder="LinkedIn URL">
    </div> 

    <div class="form-group">
        <label for="github" class="control-label">Github</label>
        <input type="text" class="form-control" id="github" name="github" placeholder="Github URL">
    </div>  

    <!--================= SKILLS PORTION ============================================= -->
                <h2>What skills are you knowledgeable in?</h2>
                <div class="form-group">

                    <div class="checkbox">
                    <input type="checkbox" name="CSS">
                    <label for="CSS">CSS</label>
                    </div>

                    <div class="checkbox">
                    <input type="checkbox" name="HTML">
                    <label for="HTML">HTML</label>
                    </div>

                    <div class="checkbox">
                    <input type="checkbox" name="Ruby_Rails">
                    <label for="Ruby_Rails">Ruby on Rails</label>
                    </div>

                    <div class="checkbox">
                    <input type="checkbox" name="Java">
                    <label for="Java">Java</label>
                    </div>

                    <div class="checkbox">
                    <input type="checkbox" name="Javascript">
                    <label for="Javascript">Javascript</label>
                    </div>
                    
                    <div class="checkbox">
                    <input type="checkbox" name="MYSQL">
                    <label for="MYSQL">MYSQL</label>
                    </div>
                    
                    <div class="checkbox">
                    <input type="checkbox" name="React">
                    <label for="React">React</label>
                    </div>

                    <div class="checkbox">
                    <input type="checkbox" name="PHP">
                    <label for="PHP">PHP</label>
                    </div>

                    <div class="checkbox">
                    <input type="checkbox" name="Groovy_Grails">
                    <label for="Groovy_Grails">Groovy on Grails</label>
                    </div>

                    <div class="checkbox">
                    <input type="checkbox" name="C_plus_plus">
                    <label for="C_plus_plus">C++</label>
                    </div>
                    
                    </br> 
                    <br>
                    <div class="form-group">
                        <label for="others" class="control-label">Others</label>
                        <input type="text" class="form-control" id="others" name="others" placeholder="Others">
                 </div>

            <!-- Submit Button -->
            <div class="form-group"> 
                <button type="submit" class="btn btn-primary btn-lg">Submit!</button>
            </div> 
        </form>         
    </fieldset>
</div><!--end of main div-->
