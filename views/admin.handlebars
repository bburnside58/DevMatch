{{!-- Added padding to the body to prevent the nav bar from overlapping with body content --}}
<link href="css/login_style.css" rel="stylesheet">

{{!-- Added sticky footer so footer sticks to the bottom of the page --}}
<link href="css/sticky_footer.css" rel="stylesheet">

<h2 class="text-center">Browse Applicants</h2>
<hr>

{{!-- Table inline styles --}}
<style>
tr#table th {
    padding-right: 20px;
}
table {
    line-height: 250%;
}
.modal-body {
    font-size: 18px;
}
</style>

<table class = "table-striped table-bordered table-hover table-condensed" id="table" width="100%">
    <tr class="active">
      <th>Applicant ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <!-- <th>Email</th> -->
      <!-- <th>Address</th> -->
      <!-- <th>Phone Number</th> -->
      <!-- <th>Linkedin</th> -->
      <!-- <th>Github</th> -->
      <th>CSS</th>
      <th>HTML</th>
      <th>Ruby Rails</th>
      <th>Java</th>
      <th>Javascript</th>
      <th>MySQL</th>
      <th>React</th>
      <th>PHP</th>
      <th>Groovy Grails</th>
      <th>C++</th>
      <th>others</th>
      <th>Personality Type</th>
    </tr>
      {{#each skills}}
    <tr>
      <td>{{this.id}}</th>
      <th>{{this.first_name}}</th>
      <th>{{this.last_name}}</th>
      <!-- <th>{{this.email}}</th> -->
    
      <!-- <td>{{this.address}}</td> -->
      <!-- <td>{{this.phone_number}}</td> -->
      <!-- <td>{{this.linkedin}}</td> -->
      <!-- <td>{{this.github}}</td> -->
  
      <td>{{this.CSS}}</td>
      <td>{{this.HTML}}</td>
      <td>{{this.Ruby_Rails}}</td>
      <td>{{this.Java}}</td>
      <td>{{this.Javascript}}</td>
      <td>{{this.MySQL}}</td>
      <td>{{this.React}}</td>
      <td>{{this.PHP}}</td>
      <td>{{this.Groovy_Grails}}</td>
      <td>{{this.C_plus_plus}}</td>
      <td>{{this.others}}</td>
      <td>{{this.personality_type}}</td>
    </tr>
     
  {{/each}}
</table>

{{!-- Modal for displaying user information when a table row is clicked --}}
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center">Applicant Information</h4>
      </div>
      <div class="modal-body text-center">
        {{!-- <p><input type="text" class="input-sm" id="txtfname"/></p>
        <p><input type="text" class="input-sm" id="txtlname"/></p> --}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary center-block" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

{{!-- script link for modal pop up --}}
<script type="text/javascript" src="js/adminlogin.js"></script>
