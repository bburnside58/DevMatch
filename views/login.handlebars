{{!-- Added padding to the body to prevent the nav bar from overlapping with body content --}}
<link href="css/login_style.css" rel="stylesheet">

<div class="row" id="usernameContainer">
	<div class="col-md-4 col-md-offset-4 welcomeText text-center">
		<h1>{{welcomeText}}</h1>
		<h3>{{message}}</h3>
	</div>
</div>
<br>
<form method="post" action="/{{actionBtn}}">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 authInputs">
			<input id="username" name="username" placeholder="Username" />
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-md-4 col-md-offset-4 authInputs">
			<input id="password" type="password" name="password" placeholder="Password" />
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<button class="btn btn-primary" type="submit" id="submitUser">Submit</button>
		</div>
	</div>
</form>
<br>
<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<a href="/{{otherAction}}" class="btn btn-success" type="submit" id="submitUser">{{otherAction}}</a>
		</div>
		<div class="col-md-4 col-md-offset-4">
			<hr>
			<a href="/auth/github" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Login with Github</span></a>
		</div>
	</div>
